<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
       

        
    </div>

    {{#if emails.length}}
    <div class="col-md-6 email-list">
        <h3>Current Campaigns:</h3>

        {{#each emails as |email|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/project/{{email.id}}">{{email.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{email.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>